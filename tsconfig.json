{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "include": [
    "test/*", "test/**/*",
    "scripts/*", "scripts/**/*",
    "proposals/*", "proposals/**/*",
  ],
  "files": ["hardhat.config.ts"]
}
